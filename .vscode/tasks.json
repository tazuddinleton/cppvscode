{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clean_build_dir",
            "type": "shell",
            "command": "Remove-Item",
            "args": [
                "${workspaceFolder}\\build\\**",                
            ]
        },

        {
            "label": "build_active_file",
            "type": "shell",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/Fe:",
                "${workspaceFolder}\\build\\${fileBasenameNoExtension}.exe",
                "${fileDirname}\\**.cpp"
            ],
            "options": {
                "cwd": "${workspaceFolder}\\build"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build",
            "dependsOn": [
                "clean_build_dir",
                "build_active_file"
            ]
        }      
    ]
}